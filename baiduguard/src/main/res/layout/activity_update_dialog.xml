<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="150dp"
    tools:context="com.zzptc.joker.baiduguard.activity.UpdateDialogActivity"
    android:background="@drawable/update_load_shape">


    <ImageView
        android:id="@+id/load_one"
        android:layout_width="1px"
        android:layout_height="1px"
        android:src="@mipmap/load_one"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>

    <ImageView
        android:id="@+id/load_two"
        android:layout_width="1px"
        android:layout_height="1px"
        android:src="@mipmap/load_two"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:text="正在检查升级..."
        android:textColor="@android:color/holo_blue_light"/>
</RelativeLayout>
