<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background">

    <ImageView
        android:id="@+id/iv_top"
        style="@style/SplashTop"
        android:src="@mipmap/splash_second_top" />

    <ImageView
        style="@style/SplashCenterBg"
        android:src="@mipmap/splash_bg_center_two" />

    <ImageView
        style="@style/SplashCenter"
        android:src="@mipmap/splash_second_center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:src="@mipmap/dot_unselected" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:src="@mipmap/dot_selected" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:src="@mipmap/dot_unselected" />
    </LinearLayout>
</RelativeLayout>
